@{
    ViewBag.Title = "Manage User Roles";
}
@model IdentityExample.ViewModel.ManageUserRolesVM;
@inject UserManager<IdentityUser> userManager;

<div class="container">
    <h1>Manage Role For: @Model.user.UserName</h1>
    <form method="post">
        <div class="card">
            <div class="card-header">
                <h3>@Model.user.UserName</h3>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style="width: 90%;">Role Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for(int i = 0; i < Model.roles.Count(); i++)
                        {
                            <tr>
                                <td>@Model.roles[i]</td>
                                @if(await userManager.IsInRoleAsync(@Model.user, @Model.roles[i]))
                                {
                                    <td>
                                        <button style="width: 100%;" asp-route-role_name="@Model.roles[i]"
                                           asp-route-username="@Model.user.UserName" asp-action="ManageUserRoles"
                                           type="submit" class="btn btn-danger pt-1 pb-1">Remove</button>
                                    </td>
                                } else
                                {
                                    <td>
                                        <button style="width: 100%;" asp-route-role_name="@Model.roles[i]"
                                          asp-route-username="@Model.user.UserName" asp-action="ManageUserRoles"
                                          type="submit" class="btn btn-primary pt-1 pb-1">Add</button>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <div class="card-footer">
                <a asp-action="EditUser" asp-route-id="@Model.user.Id" asp-controller="Admin"
                   class="btn btn-primary">Back</a>
            </div>
        </div>
        </form>
</div>
