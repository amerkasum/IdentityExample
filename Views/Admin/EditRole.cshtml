@{
    ViewBag.Title = "Edit Role";
}

@model IdentityExample.ViewModel.EditRoleVM

<div class="container">
    <h1 class="mb-1">Edit Role</h1>

    <form method="post" asp-action="EditRole" asp-controller="Admin">
        <div asp-validation-summary="All"></div>
        <div class="form-group row">
            <label asp-for="@Model.id" class="col-sm-2 col-form-label">ID</label>
            <div class="col-sm-10">
                <input asp-for="@Model.id" class="form-control" disabled />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="@Model.role_name" class="col-sm-2 col-form-label">Role Name</label>
            <div class="col-sm-10">
                <input asp-for="@Model.role_name" class="form-control" />
                <span asp-validation-for="@Model.role_name"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary mr-2">Update</button>
                <a asp-action="ListRoles" class="btn btn-primary mr-2">Cancel</a>
            </div>  
        </div>

        <div class="card">
            <div class="card-header">
                <h3>Users in this role</h3>
            </div>
            <div class="card-body">
                @if (Model.users.Any())
                {

                    <table class="table table-striped mt-1">
                        <thead>
                            <tr>
                                <th>User</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model.users)
                            {
                                <tr>
                                    <td style="width:90%;">@i</td>
                                    <td><button class="btn btn-danger" style="color: white; padding-top: 2px; padding-bottom:2px;"
                                           asp-action="RemoveUserFromRole" asp-route-username="@i" asp-route-role_id="@Model.id">Remove</button></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <h3>There is no ursers in this role!</h3>
                }
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-action="AddUserInRole" asp-route-role_id="@Model.id">Add User</a>
            </div>
        </div>
    </form>

</div>
