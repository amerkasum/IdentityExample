@{
    ViewBag.Title = "Manage User Claims";
    var user = await userManager.FindByIdAsync(@Model.user_id);
}
@model IdentityExample.ViewModel.ManageUserClaimsVM;
@inject UserManager<IdentityUser> userManager;

<div class="container">
    <h3>Manage Claim </h3>
    <form method="post">
        <div class="card">
            <div class="card-header">
                <h3>@user.UserName</h3>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style="width: 90%;">Role Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.claims.Count(); i++)
                        {
                            <tr>
                                <td>@Model.claims[i].claim_type</td>
                                @if (@Model.claims[i].isInClaim)
                                {
                                    <td>
                                        <button style="width: 100%;" asp-action="ManageUserClaims" asp-route-user_id="@Model.user_id"
                                            asp-route-claim_type="@Model.claims[i].claim_type" type="submit" class="btn btn-danger pt-1 pb-1">
                                            Remove
                                        </button>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <button style="width: 100%;" asp-action="ManageUserClaims" asp-route-user_id="@Model.user_id"
                                             asp-route-claim_type="@Model.claims[i].claim_type" type="submit" class="btn btn-primary pt-1 pb-1">
                                            Add
                                        </button>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <div class="card-footer">
                <a asp-action="EditUser" asp-route-id="@Model.user_id" asp-controller="Admin"
                   class="btn btn-primary">Back</a>
            </div>
        </div>
    </form>
</div>

