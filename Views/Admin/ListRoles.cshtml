@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "List roles";
}

<div class="container">
    <h1>List of Roles</h1>
    <a class="btn btn-primary mb-3" asp-controller="Admin" asp-action="CreateRole">Create Role</a>
    @if (Model.Any())
    {
        foreach(var i in Model)
        {
            <div class="card mb-3">
                <div class=" card-header">
                    ID: @i.Id
                </div>
                <div class="card-body">
                    @i.Name
                </div>
                <div class="card-footer">
                    <div style="float: left;" class="mr-3">
                        <a asp-action="EditRole" asp-controller="Admin" asp-route-id="@i.Id" class="btn btn-primary">
                            Edit
                        </a>
                    </div>
                    <div style="float: left;" class="mr-3">
                        <form method="post" asp-action="DeleteRole" asp-controller="Admin" asp-route-id="@i.Id">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    }
    else
    {

        <div class="card">
            <div class="card-header">
                No roles created
            </div>
            <div class="card-body">
                <h5 class="card-title">Use button below to create a role</h5>
                <a class="btn btn-primary" style="width:auto" asp-action="CreateRole" asp-controller="Admin">Create Role</a>
            </div>
        </div>
    }

</div>
