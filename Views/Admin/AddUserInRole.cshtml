@{
    ViewBag.Title = "Add User In Role";
    var role_id = ViewBag.role_id;
    var role_name = ViewBag.role_name;
}

@model IdentityExample.ViewModel.UserRoleVM;

<div class="container">
    <form method="post">
        <div class="card">
            <div class="card-header">
                <h3>@role_name [@role_id]</h3>
            </div>
            <div class="card-body">
                <div asp-validation-summary="All"></div>
                <label asp-for="@Model.username">Enter Username</label>
                <input asp-for="@Model.username" class="form-control" />
                <span asp-validation-for="@Model.username" class="text-danger"></span>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
</div>
