@model IdentityExample.ViewModel.CreateRoleVM;
@{
    ViewBag.Title = "Kreiraj role";
}

<dov class="container">
    <h1>Create New Role</h1>
    <form method="post" asp-action="CreateRole">
        <div class=" form-group">
            <label asp-for="@Model.role_name">Role Name</label>
            <input asp-for="@Model.role_name" class="form-control" />
            <span asp-validation-for="@Model.role_name"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</dov>
